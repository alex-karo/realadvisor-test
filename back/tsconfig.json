{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "outDir": "build"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
